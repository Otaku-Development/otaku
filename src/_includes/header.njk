<header class="Header">
  <div class="Container">
    <a class="Header__Site-Title" href="/">
      <span class="sr-only">Otaku Development</span>
      {% include "../assets/images/logo.svg" %}
    </a>
    <nav class="Header__Nav" data-menu="closed">
      {% set navPages = collections.all | eleventyNavigation %}
      <ul class="MainNav">
        {%- for entry in navPages %}
          <li class="MainNav__Item">
            <a class="MainNav__Link" href="{{ entry.url | url }}">{{ entry.title }}</a>
          </li>
        {%- endfor %}
      </ul>
    </nav>

    <button class="js-menu-toggle Header__NavToggle" aria-expanded="false" aria-label="Open site navigation" aria-haspopup="true">
      <span></span>
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</header>


